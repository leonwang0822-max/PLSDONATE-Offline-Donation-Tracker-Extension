{
  "manifest_version": 3,
  "name": "PD Donation Tracker",
  "version": "1.0",
  "description": "Real-time companion for the Offline Donation Tracker. View live donations and get notifications.",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://plsdonategifts.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://plsdonategifts.com/*",
        "http://localhost:3001/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "icon.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PD Tracker",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}